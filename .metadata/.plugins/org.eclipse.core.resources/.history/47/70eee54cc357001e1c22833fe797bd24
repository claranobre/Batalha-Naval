package batalhanaval;

import java.awt.Point;
import java.util.Scanner;

public class Principal {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		Jogo novoJogo = new Jogo();
		Scanner in = new Scanner(System.in);
		
		Point[] posBPatrulha = new Point[2];
		posBPatrulha[0] = new Point(0, 2);
		posBPatrulha[1] = new Point(1, 2);
		
		Point[] posDestroier = new Point[3];
		posDestroier[0] = new Point(0, 4);
		posDestroier[1] = new Point(0, 5);
		posDestroier[2] = new Point(0, 6);

		Point[] posSubmarino = new Point[3];
		posSubmarino[0] = new Point(4, 4);
		posSubmarino[1] = new Point(4, 5);
		posSubmarino[2] = new Point(4, 6);
		
		Point[] posEncouracado = new Point[4];
		posEncouracado[0] = new Point(6, 9);
		posEncouracado[1] = new Point(7, 9);
		posEncouracado[2] = new Point(8, 9);
		posEncouracado[3] = new Point(9, 9);
		
		Point[] posPortaAvioes = new Point[5];
		posPortaAvioes[0] = new Point(5, 0);
		posPortaAvioes[1] = new Point(5, 1);
		posPortaAvioes[2] = new Point(5, 2);
		posPortaAvioes[3] = new Point(5, 3);
		posPortaAvioes[4] = new Point(5, 4);

		novoJogo.getJogador(0).posicionaNavio(posBPatrulha, 2);
		novoJogo.getJogador(0).posicionaNavio(posDestroier, 4);
//		novoJogo.getJogador(0).posicionaNavio(posSubmarino, 8);
//		novoJogo.getJogador(0).posicionaNavio(posEncouracado, 16);
//		novoJogo.getJogador(0).posicionaNavio(posPortaAvioes, 32);
//
		System.out.println(novoJogo.getJogador(0).getTabuleiro().toString());
		
		while (novoJogo.estaTerminado() == false) {
			System.out.println("Digite a linha do tiro: ");
			int linha = in.nextInt();
			System.out.println("Digite a coluna do tiro: ");
			int col = in.nextInt();
			
			System.out.println("Resultado: " + novoJogo.getJogador(1).atira(linha, col));
			System.out.println("Frota inimiga restante: " + novoJogo.getJogador(0).getFrotaRestante());
			System.out.println(novoJogo.getJogador(0).getTabuleiro().toString());
		}
	}
}
