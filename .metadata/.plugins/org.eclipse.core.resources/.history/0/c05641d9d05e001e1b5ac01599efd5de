package batalhanaval.gui;

import java.awt.Color;
import java.awt.Dimension;
import java.awt.Graphics;
import java.awt.Image;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.BorderFactory;
import javax.swing.JPanel;

@SuppressWarnings("serial")
public class PainelGrade extends JPanel {
	public PainelGrade() {
		setPreferredSize(new Dimension(400, 400));
		setBackground(Color.BLUE);
		setBorder(BorderFactory.createLineBorder(Color.WHITE));
	}

	@Override
	public void paintComponent(Graphics g) {
		super.paintComponent(g);
		g.setColor(Color.WHITE);
try {
	System.out.println(new File("./img/").getCanonicalPath());
} catch (IOException e1) {
	// TODO Auto-generated catch block
	e1.printStackTrace();
}
		for (int i=1; i<11; i++) {
			g.drawLine(i*40, 0, i*40, 400);
			g.drawLine(0, i*40, 400, i*40);
		}
		Image agua;
		try {
		    agua = ImageIO.read(new File("./img" + File.pathSeparator + "agua.png"));

			g.drawImage(agua, 0, 0, null);
		} catch (IOException e) {
			e.printStackTrace();
		}

	}
}
