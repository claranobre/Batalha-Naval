package batalhanaval;

import java.awt.Point;

public class Jogador {

	private int[][] tabuleiro;
	private Jogo jogo;
	private Navio[] frota;

	/**
	 * Jogador de batalha naval.
	 * 
	 * @param jogo
	 */
	public Jogador(Jogo jogo) {
		this.tabuleiro = new int[10][10]; // Tabuleiro zerado
		this.jogo = jogo;
		this.frota = new Navio[5];
		
		frota[0] = new BarcoPatrulha(new Point[BarcoPatrulha.TAMANHO], this);
		frota[1] = new Destroier(new Point[Destroier.TAMANHO], this);
		frota[2] = new Submarino(new Point[Submarino.TAMANHO], this);
		frota[3] = new Encouracado(new Point[Encouracado.TAMANHO], this);
		frota[4] = new PortaAvioes(new Point[PortaAvioes.TAMANHO], this);
	}

	public void atira(int i, int j) {
	
	}

	public Navio getNavio(int id) {
		return null;
	}

}
