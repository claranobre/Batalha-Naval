package batalhanaval;


/**
 * Jogo de batalha naval.
 * 
 * @author Darlan P. de Campos
 * @author Roger de Córdova Farias
 * 
 */

public class Jogo {
	// Constantes para os identificadores dos navios.
	public static final int BARCO_PATRULA = 2;
	public static final int SUBMARINO = 4;
	public static final int DESTROIER = 8;
	public static final int ENCOURACADO = 16;
	public static final int PORTA_AVIOES = 32;

	private Jogador[] jogadores;

	public Jogo() {
		jogadores = new Jogador[2];
		jogadores[0] = new Jogador(this);
		jogadores[1] = new Jogador(this, Jogador.FACIL);
	}

	/**
	 * Retorna um booleano indicando se o jogo já terminou.
	 * 
	 * @return true ou false
	 */
	public boolean estaTerminado() {
		return (jogadores[0].getFrotaRestante() == 0
			||  jogadores[1].getFrotaRestante() == 0);
	}

	/**
	 * 
	 * @param i
	 * @return O jogador indicado por <code>i</code>
	 */
	public Jogador getJogador(int i) {
		return jogadores[i];
	}

	/**
	 * Retorna o oponente do jogador
	 * passado como parâmetro.
	 * 
	 * @param j
	 * @return <code>Jogador</code>
	 */
	public Jogador getOponente(Jogador j) {
		return (j == jogadores[0]) ? jogadores[1] : jogadores[0];
	}
	
	
}
