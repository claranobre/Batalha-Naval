package batalhanaval;

import java.awt.Point;
import java.io.Serializable;

/**
 * Jogador de batalha naval. Possui um tabuleiro,
 * representado por um array de inteiros.
 * 
 * @param jogo
 * 
 */

public class Jogador implements Serializable {
	public enum OrdemNavios  {
		BARCO_PATRULHA, SUBMARINO, DESTROIER, ENCOURACADO, PORTA_AVIOES };
	
	private Tabuleiro tabuleiro;
	private Jogo jogo;
	private Navio[] frota;

	public Jogador(Jogo jogo) {
		this.tabuleiro = new Tabuleiro(); // Tabuleiro zerado
		this.jogo = jogo;
		this.frota = new Navio[5];
		
		frota[0] = new BarcoPatrulha(new Point[BarcoPatrulha.TAMANHO], this);
		frota[1] = new Submarino	(new Point[Submarino.TAMANHO], this);
		frota[2] = new Destroier 	(new Point[Destroier.TAMANHO], this);
		frota[3] = new Encouracado	(new Point[Encouracado.TAMANHO], this);
		frota[4] = new PortaAvioes	(new Point[PortaAvioes.TAMANHO], this);
	}

	public void atira(int x, int y) {
	
	}

	public Navio getNavio(int id) {
		for (int i = 0; i < frota.length; i++) {
			if (frota[i].ID == id) return frota[i];
		}
	}
	
	public Jogo getJogo() {
		return jogo;
	}
	
	public void posicionaNavio (Point[] pos, int n) {
		frota[n].setPosicao(pos);
	}
}
