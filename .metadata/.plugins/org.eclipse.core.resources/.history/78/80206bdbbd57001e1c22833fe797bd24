package batalhanaval;

/**
 * @author Darlan P. de Campos
 * @author Roger de  Córdova Farias
 *
 */
public class Tabuleiro {
	private int mapa[][];
	
	public Tabuleiro(int largura, int altura) {
		mapa = new int[largura][altura];
		
		for (int i = 0; i < mapa.length; i++)
			for (int j = 0; j < mapa[i].length; j++)
				mapa[i][j] = 1;
	}
	
	public void setQuadrado(int x, int y, int valor) {
		mapa[x][y] = valor;
	}

	public int[][] getMapa() {
		return mapa;
	}

	public int getQuadrado(int x, int y) {
		return mapa[x][y];
	}

	@Override
	public String toString() {
		String tab = new String();
		
		for (int i = 0; i < mapa.length; i++) {
			for (int j = 0; j < mapa[i].length; j++)
				tab += String.format("%3d", mapa[i][j]);
			tab += "\n";
		}
		
		return tab;
	}
}
